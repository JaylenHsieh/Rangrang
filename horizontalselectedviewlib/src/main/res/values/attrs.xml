<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalSelectedView">
        <!--可见数目-->
        <attr name="HorizontalSelectedViewSeeSize" format="integer" />
        <!--被选择文字的大小和颜色-->
        <attr name="HorizontalSelectedViewSelectedTextSize" format="float"/>
        <attr name="HorizontalSelectedViewSelectedTextColor" format="color|reference"/>
        
        <!--未被选中的文字大小和颜色-->
        <attr name="HorizontalSelectedViewTextSize" format="float"/>
        <attr name="HorizontalSelectedViewTextColor" format="color|reference"/>
    </declare-styleable>
</resources>